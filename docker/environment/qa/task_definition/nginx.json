{
    "family": "Nginx",
    "taskRoleArn": "{{ROLE_ARN}}",
    "executionRoleArn": "{{ROLE_ARN}}",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "nginx",
            "cpu": 0,
            "portMappings": [
                {
                    "name": "nginx-80-tcp",
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                },
                {
                    "name": "nginx-443-tcp",
                    "containerPort": 443,
                    "hostPort": 443,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "entryPoint": [],
            "command": [],
            "environment": [],
            "environmentFiles": [
                {
                    "value": "arn:aws:s3:::{{BUCKET_NAME}}/nginx.env",
                    "type": "s3"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "public",
                    "containerPath": "/srv/primero/application/public",
                    "readOnly": false
                }
            ],
            "volumesFrom": [],
            "secrets": [],
            "dependsOn": []
        }
    ],
    "volumes": [
        {
            "name": "public",
            "efsVolumeConfiguration": {
                "fileSystemId": "{{FILESYSTEM_ID}}",
                "rootDirectory": "public"
            }
        }
    ],
    "placementConstraints": [],
    "requiresCompatibilities": [],
    "cpu": "512",
    "memory": "1024",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    },
    "tags": [
        {
            "key": "service",
            "value": "nginx"
        }
    ]
}
